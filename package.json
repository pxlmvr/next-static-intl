{
    "name": "next-static-intl",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "description": "Small React i18n library optimized for statically exported Next.js App Router sites",
    "main": "./dist/next-static-intl.cjs.js",
    "module": "./dist/next-static-intl.es.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/next-static-intl.es.js",
            "require": "./dist/next-static-intl.cjs.js"
        }
    },
    "scripts": {
        "build": "rimraf dist && vite build && tsc --project tsconfig.build.json",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run build && npm run typecheck",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "vitest"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^24.10.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.1.0",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "jsdom": "^27.2.0",
        "prettier": "3.6.2",
        "rimraf": "^6.1.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.3",
        "vite": "^7.2.2",
        "vitest": "^4.0.10"
    },
    "keywords": [
        "i18n",
        "react",
        "nextjs",
        "static",
        "app-router"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pxlmvr/next-static-intl.git"
    },
    "author": "Matteo Losi",
    "license": "MIT"
}
