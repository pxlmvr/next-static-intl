{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "src",    
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vitest.setup.ts"
  ]
}
